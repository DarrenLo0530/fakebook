var unlike_button = '<%= link_to like_path(@like), method: :delete, remote: true, class: "text-danger icon" do %><i class="far fa-heart"></i><% end %>'
var num_likes = '<span><%= @parent.likes.size %></span>'
$("#like_<%= @parent.class.name.downcase%>_<%=@parent.id%>").empty().append(unlike_button, " ", num_likes)
